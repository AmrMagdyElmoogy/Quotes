<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavigationBarStyle">
        <item name="android:background">?attr/cardBackgroundColor</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">8dp</item> <!-- Adjust margin top as needed -->
        <item name="android:elevation">8dp</item> <!-- Adjust elevation as needed -->
        <item name="paddingTopNoTitle">8dp</item>
        <item name="itemIconTint">@color/dark_blue</item> <!-- Customize icon color -->
        <item name="itemTextColor">@color/black</item> <!-- Customize text color -->
    </style>

    <style name="TabItemTextSelected" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TabItemTextUnSelected" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">#7A7A7A</item>
    </style>

</resources>